generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Organization {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String
  phone      String
  zipcode    String
  logo       String?
  orgno      String     @unique
  type       String
  size       String
  currency   String
  facilities Json?
  verified   Boolean    @default(false)
  createdAt  DateTime   @default(now())
  employees  Employee[]
}

model Employee {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String
  password     String
  phone        String
  empno        String       @unique
  address      String?
  zipcode      String?
  role         String
  organization Organization @relation(fields: [orgno], references: [orgno])
  orgno        String
  createdAt    DateTime     @default(now())
}
